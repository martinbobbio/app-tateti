<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#de5bd2"/>
            <corners android:radius="@dimen/radio_button"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:color="#303f8f"/>
            <corners android:radius="@dimen/radio_button"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#ddbfdf"
                android:endColor="#2c36da"
                android:angle="270"/>
            <corners android:radius="@dimen/radio_button"/>
        </shape>
    </item>

</selector>